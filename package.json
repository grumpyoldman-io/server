{
  "name": "home-automation-server",
  "version": "0.0.2",
  "description": "Home Automation Server built with TS and DI",
  "author": "Marvin de Bruin<hello@grumpyoldman.io>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/app",
    "start:watch": "nodemon --exec \"ts-node\" --watch src/**/*.* src/app",
    "build": "tsc -p \"tsconfig.json\"",
    "format": "prettier --list-different \"src/**/*.{js,jsx,ts,tsx}\"",
    "validate": "tsc --noEmit",
    "lint": "tslint -p \"tsconfig.json\" -t stylish \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "12.0.2",
    "husky": "2.3.0",
    "nodemon": "1.19.0",
    "prettier": "1.17.1",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.4.5"
  }
}

{
  "name": "home-automation-server",
  "version": "0.0.3",
  "description": "Home Automation Server built with TS and DI",
  "author": "Marvin de Bruin<hello@grumpyoldman.io>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index",
    "start:watch": "nodemon",

{
  "name": "home-automation-server",
  "version": "0.0.3",
  "description": "Home Automation Server built with TS and DI",
  "author": "Marvin de Bruin<hello@grumpyoldman.io>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index",
    "start:watch": "nodemon",
    "build": "rm -rf ./build && webpack",
    "format": "prettier --list-different \"src/**/*.{js,jsx,ts,tsx}\"",
    "validate": "tsc --noEmit",
    "lint": "tslint -p \"tsconfig.json\" -t stylish \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "inversify": "5.0.1",
    "kleur": "3.0.3",
    "node-hue-api": "2.4.6",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@types/node": "12.12.19",
    "@types/node-hue-api": "2.3.0",
    "husky": "3.1.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "ts-loader": "6.2.1",
    "ts-node": "8.5.4",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "9.0.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.7.3",
    "webpack": "4.41.3",
    "webpack-cli": "3.3.10"
  }
}
